<!doctype html>
<html>
<head>
   <title>Mood Music ðŸŽ¶</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <div class="container">
    <div class="page-header text-center">
      <h1><span class="fa fa-music"></span> Mood Music ðŸŽ¶</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <h3>Messages</h3>


<ul class="messages">
  <% for (var i = 0; i < messages.length; i++) { %>
    <li class="message">
      <span><%= messages[i].name %></span>
      <span><%= messages[i].msg %></span>

      <!-- Display number -->
      <span class="vote-count"><%= messages[i].votes || 0 %></span>

      <!-- Cloud = like -->
      <span class="like-btn">
        <i class="fa fa-music music" aria-hidden="true"></i>
      </span>

      <!-- Rain = dislike -->
      <span class="dislike-btn">
        <i class="fa fa-tint" aria-hidden="true"></i>
      </span>

      <!-- Trash -->
      <span class="trash-btn">
        <i class="fa fa-trash" aria-hidden="true"></i>
      </span>
    </li>
  <% } %>
</ul>




