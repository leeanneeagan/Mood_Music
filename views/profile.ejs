<!DOCTYPE html>
<html>
<head>
   <title>Mood Music ðŸŽ¶</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <div class="page-header text-center">
      <h1><span class="fa fa-music"></span> Mood Music ðŸŽ¶</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <h3>Songs</h3>

        <ul class="songs">
          <% for (var i = 0; i < songs.length; i++) { %>
            <li class="song">
              <span><%= songs[i].name %></span>
              <span><%= songs[i].msg %></span>

              <!-- Display average rating -->
              <span class="average-rating">
                <%= songs[i].averageRating ? songs[i].averageRating.toFixed(1) : '0.0' %> â˜…
              </span>

              <!-- 5-Star Rating System -->
              <span class="star-rating" data-id="<%= songs[i]._id %>">
                <i class="fa fa-star" data-rating="5"></i>
                <i class="fa fa-star" data-rating="4"></i>
                <i class="fa fa-star" data-rating="3"></i>
                <i class="fa fa-star" data-rating="2"></i>
                <i class="fa fa-star" data-rating="1"></i>
              </span>

              <!-- Trash -->
              <span class="trash-btn">
                <i class="fa fa-trash" aria-hidden="true"></i>
              </span>
            </li>
          <% } %>
        </ul>

        <h2>Add a Song</h2>
        <% if (user.local.email) { %>
          <form action="/songs" method="POST">
            <input type="text" placeholder="Artist" name="name">
            <input type="text" placeholder="Song" name="msg">
            <button type="submit">Submit</button>
          </form>
        <% } %>
      </div>
    </div>
  </div>

  <script src="main.js"></script>
</body>
</html>